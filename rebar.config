{escript_emu_args, "%%! -escript main erl509_cli\n"}.

{deps, [
    % eqwalizer_support teaches eqwalizer the *correct* specs for things like lists:foldl/3.
    {eqwalizer_support,
        {git_subdir, "https://github.com/whatsapp/eqwalizer.git", {branch, "main"},
            "eqwalizer_support"}}
]}.

{profiles, [
    {test, [
        {deps, [unite]},
        {eunit_opts, [
            no_tty,
            {report, {unite_compact, []}},
            {report, {eunit_surefire, [{dir, "_build/test/surefire"}]}}
        ]}
    ]}
]}.

{project_plugins, [
    covertool
]}.

{cover_export_enabled, true}.
{covertool, [{coverdata_files, ["ct.coverdata", "eunit.coverdata"]}]}.
